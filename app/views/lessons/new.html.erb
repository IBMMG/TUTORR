<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'background.png' %>);">
  <div class="container">
    <h1>Create your lesson:</h1>
  </div>
</div>


<p>
  <%= simple_form_for [@lesson] do |l| %>
    <%= l.input :name%>
    <%= l.input :price%>
    <%= l.input :location%>
    <%= l.input :description%>
    <%= l.submit class: "btn btn-primary newbutton" %>
  <% end %>
</p>


<%= link_to 'Back to Lessons', lessons_path, class: "btn btn-primary newbutton" %>

